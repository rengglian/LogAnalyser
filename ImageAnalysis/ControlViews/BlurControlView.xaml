<UserControl x:Class="ImageAnalysis.ControlViews.BlurControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageAnalysis.ControlViews"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Border BorderBrush="Navy" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.Column="0" Background="Navy"></Border>
            <TextBlock Grid.Row="0" Grid.Column="0" Height="20px" Margin="0,0,0,5" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="center" Text="Blur Image"/>
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" >
                <Button Height="25px" Margin="0,0,0,5" Content="Blur Image" Command="{Binding BlurImageCommand}" CommandParameter="Blurred"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
